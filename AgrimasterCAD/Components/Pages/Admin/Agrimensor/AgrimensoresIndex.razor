@page "/admin/agrimensores"
@attribute [Authorize(Roles = "Administrador")]
@rendermode InteractiveServer

@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>Listado de Agrimensores</PageTitle>

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h4 class="card-title fw-bold">Listado de Agrimensores</h4>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-md-end mb-3">
                <a href="/admin/crear-agrimensor" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Crear Agrimensor
                </a>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Buscar (Nombre, Cédula, Email, Teléfono, CODIA)</label>
                    <InputText class="form-control" placeholder="Escribe para buscar..." @bind-Value="textoBusqueda" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Estado</label>
                    <InputSelect class="form-select" @bind-Value="filtroEstado">
                        <option value="Todos">Todos</option>
                        <option value="Activos">Activos</option>
                        <option value="Deshabilitados">Deshabilitados</option>
                    </InputSelect>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Nombre</th>
                            <th>Cédula</th>
                            <th>Ciudad</th>
                            <th>Dirección</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>CODIA</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!agrimensoresFiltrados.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center">No hay agrimensores registrados.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var agrimensor in agrimensoresPaginados)
                            {
                                <tr class="text-center">
                                    <td>@agrimensor.NombreCompleto</td>
                                    <td>@agrimensor.NumeroCedula</td>
                                    <td>@agrimensor.Ciudad</td>
                                    <td>@agrimensor.Direccion</td>
                                    <td>@agrimensor.Email</td>
                                    <td>@agrimensor.PhoneNumber</td>
                                    <td>@(agrimensor.NumeroCodia)</td>
                                    <td>
                                        @if (EstaDeshabilitado(agrimensor))
                                        {
                                            <span class="badge bg-danger">Deshabilitado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a class="btn btn-primary btn-sm" href="/admin/editar-agrimensor/@agrimensor.Id">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <button class="btn btn-warning btn-sm"
                                                    @onclick="() => PrepararReset(agrimensor)">
                                                <i class="bi bi-key-fill"></i>
                                            </button>

                                        <button class="btn btn-danger btn-sm"
                                                @onclick="() => PrepararEliminacion(ag)">
                                            Eliminar
                                            </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-muted">
            <small>Total de agrimensores: @AgrimensoresFiltrados.Count()</small>
        </div>

    </div>
</div>

@if (usuarioAResetear != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        Restablecer Contraseña
                    </h5>
                    <button type="button" class="btn-close" @onclick="CancelarReset"></button>
                </div>

                <div class="modal-body">
                    <p>¿Deseas restablecer la contraseña del usuario
                        <strong>@usuarioAResetear.NombreCompleto</strong>?</p>

                    @if (!string.IsNullOrEmpty(passwordGenerada))
                    {
                        <div class="alert alert-success text-center">
                            Nueva contraseña:<br />
                            <strong>@passwordGenerada</strong>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelarReset">Cancelar</button>

                    @if (string.IsNullOrEmpty(passwordGenerada))
                    {
                        <button class="btn btn-warning" @onclick="ResetearPassword">
                            <i class="bi bi-arrow-clockwise"></i> Restablecer
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-primary" @onclick="CancelarReset">
                            Listo
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>
}

@code {
    private List<ApplicationUser> agrimensores = new();
    private string textoBusqueda = "";
    private ApplicationUser? agrimensorAEliminar;

    private IEnumerable<ApplicationUser> AgrimensoresFiltrados =>
        agrimensores.Where(a =>
                string.IsNullOrWhiteSpace(textoBusqueda) ||
            (a.NombreCompleto?.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (a.NumeroCedula?.Contains(textoBusqueda) ?? false) ||
            (a.Email?.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (a.NumeroCodia?.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ?? false)
        );

    protected override async Task OnInitializedAsync()
    {
        var users = await UserManager.GetUsersInRoleAsync("Agrimensor");
        agrimensores = users.ToList();
    }

    private void PrepararReset(ApplicationUser user)
    {
        usuarioAResetear = user;
        passwordGenerada = null;
    }

    private void CancelarReset()
    {
        usuarioAResetear = null;
        passwordGenerada = null;
    }

    private void CancelarEliminacion()
    {
        agrimensorAEliminar = null;
    }

    private async Task ResetearPassword()
    {
        if (usuarioAResetear == null)
            return;

        var random = new Random();
        passwordGenerada = $"Temp{random.Next(1000, 9999)}!";

        var token = await UserManager.GeneratePasswordResetTokenAsync(usuarioAResetear);

        var result = await UserManager.ResetPasswordAsync(usuarioAResetear, token, passwordGenerada);

        if (!result.Succeeded)
        {
            passwordGenerada = "Error al restablecer contraseña.";
        }

        StateHasChanged();
    }

    private bool EstaDeshabilitado(ApplicationUser user)
    {
        return user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.UtcNow;
    }

    private async Task CambiarEstado(ApplicationUser user)
    {
        if (EstaDeshabilitado(user))
        {
            user.LockoutEnd = null;
        }
        else
        {
            user.LockoutEnd = DateTime.UtcNow.AddYears(200);
        }

        await UserManager.UpdateAsync(user);
    }
}
