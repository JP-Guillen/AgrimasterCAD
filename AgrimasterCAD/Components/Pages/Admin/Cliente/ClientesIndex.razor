@page "/admin/clientes"
@layout AppLayout
@attribute [Authorize(Roles = "Administrador")]
@rendermode InteractiveServer

@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject SolicitudesService solicitudesService

<PageTitle>Listado de Clientes</PageTitle>

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h4 class="card-title fw-bold">Listado de Clientes</h4>
        </div>

        <div class="card-body">
            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Buscar (Nombre, Cédula, Correo, Teléfono)</label>
                    <InputText class="form-control" placeholder="Escribe para buscar..." @bind-Value="textoBusqueda" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Estado</label>
                    <InputSelect class="form-select" @bind-Value="filtroEstado">
                        <option value="Todos">Todos</option>
                        <option value="Activos">Activos</option>
                        <option value="Deshabilitados">Deshabilitados</option>
                    </InputSelect>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Nombre</th>
                            <th>Cédula</th>
                            <th>Ciudad</th>
                            <th>Dirección</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!clientesFiltrados.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center">No hay clientes registrados.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var cliente in clientesPaginados)
                            {
                                <tr class="text-center">
                                    <td>@cliente.NombreCompleto</td>
                                    <td>@cliente.NumeroCedula</td>
                                    <td>@cliente.Ciudad</td>
                                    <td>@cliente.Direccion</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.PhoneNumber</td>
                                    <td>
                                        @if (EstaDeshabilitado(cliente))
                                        {
                                            <span class="badge bg-danger">Deshabilitado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a class="btn btn-primary btn-sm" href="/admin/editar-cliente/@cliente.Id">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <button class="btn btn-warning btn-sm"
                                                    @onclick="() => PrepararReset(cliente)">
                                                <i class="bi bi-key-fill"></i>
                                            </button>

                                            <button class="btn @(EstaDeshabilitado(cliente) ? "btn-success" : "btn-danger") btn-sm"
                                                    @onclick="() => CambiarEstado(cliente)">
                                                <i class="@(EstaDeshabilitado(cliente) ? "bi-person-check-fill" : "bi-person-x-fill")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer">
            <small class="text-muted">
                Mostrando <strong>@clientesPaginados.Count()</strong> de 
                <strong>@clientesFiltrados.Count()</strong> resultados — 
                Total: <strong>@clientes.Count</strong> clientes
            </small>

            <nav class="mt-3">
                <ul class="pagination justify-content-center">

                    <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => CambiarPagina(paginaActual - 1)">Anterior</button>
                    </li>

                    <li class="page-item active">
                        <button class="page-link">@paginaActual de @totalPaginas</button>
                    </li>

                    <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                        <button class="page-link" @onclick="() => CambiarPagina(paginaActual + 1)">Siguiente</button>
                    </li>

                </ul>
            </nav>
        </div>
    </div>
</div>

@if (usuarioAResetear != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        Restablecer Contraseña
                    </h5>
                    <button type="button" class="btn-close" @onclick="CancelarReset"></button>
                </div>

                <div class="modal-body">
                    <p>¿Deseas restablecer la contraseña del usuario
                        <strong>@usuarioAResetear.NombreCompleto</strong>?</p>

                    @if (!string.IsNullOrEmpty(passwordGenerada))
                    {
                        <div class="alert alert-success text-center">
                            Nueva contraseña:<br />
                            <strong>@passwordGenerada</strong>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelarReset">Cancelar</button>

                    @if (string.IsNullOrEmpty(passwordGenerada))
                    {
                        <button class="btn btn-warning" @onclick="ResetearPassword">
                            <i class="bi bi-arrow-clockwise"></i> Restablecer
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-primary" @onclick="CancelarReset">
                            Listo
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>
}

@code {
    private List<ApplicationUser> clientes = new();

    private string _textoBusqueda = "";
    private string textoBusqueda
    {
        get => _textoBusqueda;
        set { _textoBusqueda = value; paginaActual = 1; }
    }

    private string _filtroEstado = "Todos";
    private string filtroEstado
    {
        get => _filtroEstado;
        set
        {
            _filtroEstado = value; paginaActual = 1;
        }
    }

    private ApplicationUser? usuarioAResetear;
    private string? passwordGenerada;

    private int paginaActual = 1;
    private int tamanoPagina = 10;
    private int totalPaginas => Math.Max(1, (int)Math.Ceiling((double)clientesFiltrados.Count() / tamanoPagina));

    private IEnumerable<ApplicationUser> clientesFiltrados =>
        clientes.Where(cliente =>
            (
                string.IsNullOrWhiteSpace(textoBusqueda) ||
                cliente.NombreCompleto.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                cliente.NumeroCedula.Contains(textoBusqueda) ||
                cliente.Email!.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                cliente.PhoneNumber!.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)
            )
            &&
            (
                filtroEstado == "Todos" ||
                (filtroEstado == "Activos" && !EstaDeshabilitado(cliente)) ||
                (filtroEstado == "Deshabilitados" && EstaDeshabilitado(cliente))
            )
        );

    private IEnumerable<ApplicationUser> clientesPaginados =>
        clientesFiltrados
            .Skip((paginaActual - 1) * tamanoPagina)
            .Take(tamanoPagina);

    protected override async Task OnInitializedAsync()
    {
        var users = await UserManager.GetUsersInRoleAsync("Cliente");
        clientes = users.ToList();
    }

    private void PrepararReset(ApplicationUser user)
    {
        usuarioAResetear = user;
        passwordGenerada = null;
    }

    private void CancelarReset()
    {
        usuarioAResetear = null;
        passwordGenerada = null;
    }

    private void CambiarPagina(int pagina)
    {
        if (pagina < 1 || pagina > totalPaginas)
            return;

        paginaActual = pagina;
    }

    private async Task ResetearPassword()
    {
        if (usuarioAResetear == null)
            return;

        var random = new Random();
        passwordGenerada = $"Temp{random.Next(1000, 9999)}!";

        var token = await UserManager.GeneratePasswordResetTokenAsync(usuarioAResetear);

        var result = await UserManager.ResetPasswordAsync(usuarioAResetear, token, passwordGenerada);

        if (!result.Succeeded)
        {
            passwordGenerada = "Error al restablecer contraseña.";
        }

        StateHasChanged();
    }

    private bool EstaDeshabilitado(ApplicationUser user)
    {
        return user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.UtcNow;
    }

    private async Task CambiarEstado(ApplicationUser user)
    {
        if (EstaDeshabilitado(user))
        {
            user.LockoutEnd = null;
        }
        else
        {
            user.LockoutEnd = DateTime.UtcNow.AddYears(200);
        }

        await UserManager.UpdateAsync(user);
    }
}
