@page "/agrimensor/dashboard"
@attribute [Authorize(Roles = "Agrimensor")]
@rendermode InteractiveServer

@inject SolicitudesService solicitudesService
@inject PagosService pagosService
@inject AuthenticationStateProvider authenticationStateProvider
@inject NavigationManager navigationManager

<PageTitle>Dashboard Agrimensor</PageTitle>

<div class="container py-4">

    <h2 class="fw-bold text-center mb-4">Panel del Agrimensor</h2>

    <div class="row g-3 mb-4">

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Asignadas</h6>
                    <h3 class="fw-bold text-primary">@asignadas</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">En Proceso</h6>
                    <h3 class="fw-bold text-warning">@enProceso</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Finalizadas</h6>
                    <h3 class="fw-bold text-success">@finalizadas</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Pagos en Revisión</h6>
                    <h3 class="fw-bold text-info">@pagosRevision</h3>
                </div>
            </div>
        </div>

    </div>

    <div class="card shadow-lg mt-4">
        <div class="card-header text-center bg-light">
            <h5 class="fw-bold">Últimas Solicitudes Asignadas</h5>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Estado</th>
                        <th>Provincia</th>
                        <th>Fecha</th>
                        <th>Acción</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var solicitud in ultimas)
                    {
                        <tr class="text-center">
                            <td>@solicitud.SolicitudId</td>
                            <td>@solicitud.Cliente!.NombreCompleto</td>
                            <td><span class="badge bg-primary">@solicitud.Estado</span></td>
                            <td>@solicitud.Provincia</td>
                            <td>@solicitud.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="/agrimensor/solicitud/@solicitud.SolicitudId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>

@code {
    private string? userId;

    private int asignadas;
    private int enProceso;
    private int finalizadas;
    private int pagosRevision;

    private List<Solicitudes> ultimas = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (userId == null)
        {
            navigationManager.NavigateTo("/Account/Login");
            return;
        }

        var solicitudes = await solicitudesService.Listar(s => s.AgrimensorId == userId);
        var pagos = await pagosService.Listar(p => p.PagoId > 0);

        asignadas = solicitudes.Count(s => s.Estado == "Asignado");
        enProceso = solicitudes.Count(s => s.Estado == "En Proceso");
        finalizadas = solicitudes.Count(s => s.Estado == "Finalizado");

        pagosRevision = pagos.Count(p =>
            p.Estado == "Pendiente" &&
            solicitudes.Any(s => s.SolicitudId == p.SolicitudId)
        );

        ultimas = solicitudes
            .OrderByDescending(s => s.Fecha)
            .Take(5)
            .ToList();
    }
}