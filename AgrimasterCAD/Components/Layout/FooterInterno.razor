@code {
    private static string GetDashboardUrl(ClaimsPrincipal user)
    {
        if (user.IsInRole("Administrador"))
            return "/admin/dashboard";

        if (user.IsInRole("Agrimensor"))
            return "/agrimensor/dashboard";

        if (user.IsInRole("Cliente"))
            return "/cliente/dashboard";

        return "/";
    }
}
