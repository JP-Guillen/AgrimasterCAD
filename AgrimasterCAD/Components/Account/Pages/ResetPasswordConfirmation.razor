@page "/Account/ResetPasswordConfirmation"

<PageTitle>Contraseña restablecida</PageTitle>

<div class="container px-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow border-0 rounded-4 text-center p-5">

                <h2 class="fw-bolder mb-3">¡Contraseña restablecida!</h2>

                <p class="text-muted">
                    Tu contraseña ha sido cambiada correctamente.
                </p>

                <a class="btn btn-primary mt-3 px-4 py-2 fw-bold" href="/Account/Login">
                    Iniciar Sesión
                </a>

            </div>

        </div>
    </div>
</div>
